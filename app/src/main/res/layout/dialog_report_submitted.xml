<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Success Icon -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/light_green_circle_background">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                app:tint="#2E7D32"/>
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Submitted"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for reporting this issue. The barangay staff will review and address it promptly."
            android:textColor="#666666"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"/>

        <!-- Info Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_info_box_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What happens next:"
                android:textColor="#1565C0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Staff will review your report\n• Issue will be categorized and prioritized\n• You'll receive updates on progress\n• Resolution typically within 7 business days"
                android:textColor="#1976D2"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- Track Report Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_track_report"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Track Report"
            android:backgroundTint="#155DFC"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Back to Home Button -->
        <TextView
            android:id="@+id/btn_back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:textColor="#155DFC"
            android:textSize="16sp"
            android:padding="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
