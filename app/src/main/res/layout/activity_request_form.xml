<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/black" />

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_shield_outline_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/header_icon"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Barangay Clearance"
                android:textColor="#155DFC"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Form"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:contentPadding="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Requirements -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requirements"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/light_blue_circle_background"
                                android:text="1"
                                android:textColor="#155DFC"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valid ID (Photocopy)"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/light_blue_circle_background"
                                android:text="2"
                                android:textColor="#155DFC"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Proof of Residency"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/light_blue_circle_background"
                                android:text="3"
                                android:textColor="#155DFC"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recent Passport Photo (1x1)"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        
                         <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/light_blue_circle_background"
                                android:text="4"
                                android:textColor="#155DFC"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Barangay ID (if available)"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Full Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/et_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:hint="Juan dela Cruz"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Address -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:hint="Purok 1, Brookspoint, Baguio City"
                        android:inputType="textPostalAddress"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Contact Number -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/et_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:hint="09171234567"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Purpose -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purpose"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/et_purpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:hint="State the purpose of your request"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:gravity="top|start"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Upload Attachments -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Attachments"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/upload_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dashed_border_background"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">
                        
                        <ImageView
                            android:id="@+id/upload_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_add"
                            app:tint="@android:color/darker_gray" 
                            android:layout_marginBottom="8dp"/>
                            <!-- Need to check if ic_upload exists, if not use similar resource or generic -->
                        
                        <TextView
                            android:id="@+id/upload_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click to upload or drag and drop"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            android:gravity="center"/>
                            
                        <TextView
                            android:id="@+id/upload_subtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PDF, JPG, PNG (Max 5MB)"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Info Box -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_info_box_background"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp">
                        
                        <TextView
                            android:id="@+id/processing_fee_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Processing Fee: â‚±50.00"
                            android:textColor="#0D47A1"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment will be collected upon document release"
                            android:textColor="#155DFC"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Submit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_submit_request"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Submit Request"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:backgroundTint="#155DFC"
                        app:cornerRadius="12dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@android:color/white"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
