<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".AdminActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#155dfc"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/trust_wallet_token"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Staff Portal"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/app_logo"
            app:layout_constraintTop_toTopOf="@+id/app_logo" />

        <TextView
            android:id="@+id/barangay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barangay Brookspoint"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/app_name"
            app:layout_constraintTop_toBottomOf="@+id/app_name" />

        <ImageView
            android:id="@+id/logout_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Welcome,"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_logo" />

        <TextView
            android:id="@+id/admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barangay Staff"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/admin_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/summary_cards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.cardview.widget.CardView style="@style/SummaryCard">

            <LinearLayout style="@style/SummaryCardContent">

                <ImageView
                    style="@style/SummaryCardIcon"
                    android:src="@drawable/ic_pending_clock" />

                <TextView
                    style="@style/SummaryCardTitle"
                    android:text="Pending" />

                <TextView
                    android:id="@+id/pending_requests_count"
                    style="@style/SummaryCardValue"
                    android:text="0" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/SummaryCard">

            <LinearLayout style="@style/SummaryCardContent">

                <ImageView
                    style="@style/SummaryCardIcon"
                    android:src="@drawable/ic_active_issue" />

                <TextView
                    style="@style/SummaryCardTitle"
                    android:text="Active" />

                <TextView
                    android:id="@+id/active_reports_count"
                    style="@style/SummaryCardValue"
                    android:text="0" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/posts_card"
            style="@style/SummaryCard">

            <LinearLayout style="@style/SummaryCardContent">

                <ImageView
                    style="@style/SummaryCardIcon"
                    android:src="@drawable/ic_posts" />

                <TextView
                    style="@style/SummaryCardTitle"
                    android:text="Posts" />

                <TextView
                    android:id="@+id/posts_count"
                    style="@style/SummaryCardValue"
                    android:text="0" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Quick Actions -->
    <TextView
        android:id="@+id/quick_actions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Quick Actions"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_cards" />

    <GridLayout
        android:id="@+id/quick_actions_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quick_actions_title">

        <androidx.cardview.widget.CardView
            android:id="@+id/manage_requests_card"
            style="@style/QuickActionCard">
            <LinearLayout style="@style/QuickActionContent">
                <ImageView
                    style="@style/QuickActionIcon"
                    android:background="@drawable/requests_icon_background"
                    android:src="@drawable/ic_requests" />
                <TextView
                    style="@style/QuickActionText"
                    android:text="Manage Requests" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/manage_reports_card"
            style="@style/QuickActionCard">
            <LinearLayout style="@style/QuickActionContent">
                <ImageView
                    style="@style/QuickActionIcon"
                    android:background="@drawable/report_issue_icon_background"
                    android:src="@drawable/ic_report_issue" />
                <TextView
                    style="@style/QuickActionText"
                    android:text="Manage Reports" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/announcements_card"
            style="@style/QuickActionCard">
            <LinearLayout style="@style/QuickActionContent">
                <ImageView
                    style="@style/QuickActionIcon"
                    android:background="@drawable/announcements_icon_background"
                    android:src="@drawable/ic_announcement" />
                <TextView
                    style="@style/QuickActionText"
                    android:text="Announcements" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/analytics_card"
            style="@style/QuickActionCard">
            <LinearLayout style="@style/QuickActionContent">
                <ImageView
                    style="@style/QuickActionIcon"
                    android:background="@drawable/requests_icon_background"
                    android:src="@drawable/ic_analytics" />
                <TextView
                    style="@style/QuickActionText"
                    android:text="Analytics" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/records_card"
            style="@style/QuickActionCard">
            <LinearLayout style="@style/QuickActionContent">
                <ImageView
                    style="@style/QuickActionIcon"
                    android:src="@drawable/ic_records" />
                <TextView
                    style="@style/QuickActionText"
                    android:text="Records" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <!-- Recent Activity -->
    <TextView
        android:id="@+id/recent_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Recent Activity"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quick_actions_grid" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_recent_activity_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent_activity_title" />

</androidx.constraintlayout.widget.ConstraintLayout>